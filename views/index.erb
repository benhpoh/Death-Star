<section class="main_window">
    <div>
        
        <h2>Are you ready to fire?</h2>

        <p>Choose a planet</p>
        <div style="width:100%;height:0;padding-bottom:122%;position:relative;"><iframe src="https://giphy.com/embed/JsDzMHc0Edo4YnDQxP" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div>
    </div>

    <div class="planets">
    <% planets.each do |planet| %>
        <div>
            <a href="/planet/<%= planet["id"]%>"> 
                <img src="<%= planet["image_url"]%>">
            </a> 
            <h2><%= planet["name"]%></h2>
        </div>
    <% end %>
    </div>
</section>